<% max_level = Spree::Config[:max_level_in_taxons_menu] || 1 %>
<nav class="col-md-12">
  <div id="main-nav-bar" class="navbar">
    <ul class="nav navbar-nav" data-hook>
      <li id="home-link" data-hook><%= link_to '<i class="glyphicon glyphicon-home"></i>'.html_safe, spree.root_path %>
    <% (@taxonomies || []).each do |taxonomy| %>
     <% cache [I18n.locale, taxonomy, max_level, @taxon] do %>
      <% if taxonomy.root.children.any? %>
      <li id="taxon-name"><%= link_to taxonomy.name, seo_url(taxonomy.root) %></li>
     <% end %>
  <% end %>
<% end %>
</ul>

    <ul class="nav navbar-nav navbar-right" data-hook>
      <li id="link-to-cart" data-hook>
        <noscript>
          <%= link_to Spree.t(:cart), '/cart' %>
        </noscript>
        &nbsp;
      </li>
      <script>Spree.fetch_cart()</script>
    </ul>
  </div>
</nav>
